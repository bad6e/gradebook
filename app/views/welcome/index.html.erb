<div class="container">
  <div class="col-md-12 login-buttons">
    <h3>Welcome to Gradebook</h3>
    <% if current_user %>
      <h4>Hi <%= current_user.full_name %></h4>
      <%= button_to "Click Here for Profile", render_path(current_user.type, current_user), method: "get", class: "btn btn-danger" %>
    <% else %>
      <%= button_to "Click Here to Login", login_path, method: "get", class: "btn btn-danger" %>
      <%= button_to "Click Here to Join", join_path, method: "get", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
